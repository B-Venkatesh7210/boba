{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./dist",
    "types": [
      "node"
    ],
  },
  "include": ["./hardhat.config.ts", "./scripts", "./bin", "./deploy", "./test"],
  "files": ["./hardhat.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
